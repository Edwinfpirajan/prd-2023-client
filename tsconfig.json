{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "baseUrl": "./src",
    "types": ["vite/client"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/common/types"
    ],
    "paths": {
      "@sass/*": ["./styles/sass/*"],
      "@styles/*": ["./styles/*"],
      "@assets/*": ["./assets/*"],
      "@images/*": ["./assets/img/*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./common/utils/*"],
      "@store/*": ["./store/*"],
      "@helpers/*": ["./common/helpers/*"],
      "@hooks/*": ["./common/hooks/*"],
      "@reducers/*": ["./common/reducers/*"],
      "@routers/*": ["./common/routers/*"],
      "@common/*": ["./common/*"],

    }
  },
  "include": ["src"],
  "references": [{
    "path": "./tsconfig.node.json"
  }]
}